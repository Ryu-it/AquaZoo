<% content_for :header do %>
<div class="bg-sky-600 p-[30px] flex justify-end text-white">
    <div class="flex space-x-15 text-xl">
        <%= link_to "水族館に行く", posts_path(category: "aqua") %>
        <%= link_to "動物園に行く", posts_path(category: "zoo") %>
                <!-- ハンバーガーメニューと推し -->
        <div x-data="{ open: false, message: false }" class="relative">
            <button @click="message = !message" class="focus:outline-none cursor-pointer">
                <p class="h-6 mr-15">推しを教える</p>
            </button>
                <!-- 三本線ボタン -->
            <button @click="open = !open" class="focus:outline-none">
                <!-- 三本線 -->
            <svg class="w-6 h-6 mr-15" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            </button>
                <!-- メニュー内容 -->
            <div x-show="open" @click.outside="open = false" class="absolute right-0 mt-8 w-60 bg-sky-400 text-white rounded shadow-lg">
                <% if current_user %>
                    <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "block px-4 py-2 hover:bg-gray-700" %>
                <% else %>
                    <%= link_to "館員登録", new_user_registration_path, class: "block px-4 py-2 hover:bg-gray-700" %>
                    <%= link_to "ログイン", new_user_session_path, class: "block px-4 py-2 hover:bg-gray-700" %>
                <% end %>
                <%= link_to "トップに戻る", root_path, class: "block px-4 py-2 hover:bg-gray-700" %>
            </div>
            <div x-show="message" @click.outside="message = false" class="absolute right-0 mt-8 w-60 bg-sky-400 text-white rounded shadow-lg">
                <%= link_to "動物園を投稿する", new_post_path(category: "zoo"), class: "block px-4 py-2 hover:bg-gray-700" %>
                <%= link_to "水族館を投稿する", new_post_path(category: "aqua"), class: "block px-4 py-2 hover:bg-gray-700" %>
            </div>
        </div>
    </div>
</div>
<% end %>
