<%= render "shares/zoo_header" %>
<%= render "shares/flash_message" %>
<body class="bg-green-900 bg-opacity-80">
  <div class="max-w-6xl mx-auto px-2 my-16">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mt-6">
      <% @posts.each do |post| %>
        <% if post.category.name == "zoo" %>
          <div class="bg-lemon-500 border rounded-lg shadow-md p-4">
            <span class="font-semibold">
              <%= post.user.name %>
            </span>
            <div class= "font-bold text-2xl text-center mt-4 mb-4"> 
              「 <%= post.title %> 」 
            </div>
            <% if post.image.attached? %>
              <div class="flex justify-center items-center">
                <%= image_tag post.image.variant(resize_to_limit: [500, 530]), class: "border-[12px]  border-green-900" %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</body>
