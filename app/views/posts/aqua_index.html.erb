<%= render "shares/aqua_header" %>
<%= render "shares/flash_message" %>
<body class="bg-[rgba(0,76,120,1)]">
  <%= render "search_form", q: @q, url: posts_path(category: "aqua") %>
  <div class="max-w-6xl mx-auto px-2 my-16">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mt-6">
      <% @posts.each do |post| %>
        <% if post.category.name == "aqua" %>
          <%= link_to post_path(post, category: "aqua") do %>
          <div class="bg-sky-600 border rounded-lg shadow-md p-4 h-full">
            <span class="font-semibold text-white">
              <%= post.user.name %>
            </span>
            <div class= "text-white font-bold text-2xl text-center mt-4 mb-4"> 
              「 <%= post.title %> 」 
            </div>
            <% if post.image.attached? %>
              <div class="flex justify-center items-center">
              <%= image_tag post.image.variant(resize_to_limit: [500, 530]), class: "border-[12px]  border-[rgba(0,76,120,1)]" %>
              </div>
            <% end %>
          </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</body>
